{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "/usr/bin/gitea web",
    "healthchecks": {
      "readiness": {
        "command": ["curl", "-f", "http://localhost:3000/api/healthz"],
        "interval": 30,
        "timeout": 10,
        "retries": 3
      },
      "liveness": {
        "command": ["curl", "-f", "http://localhost:3000/api/healthz"],
        "interval": 60,
        "timeout": 10,
        "retries": 5
      }
    }
  },
  "volumes": [
    {
      "name": "gitea-data",
      "mountPath": "/var/lib/gitea/data"
    },
    {
      "name": "gitea-repos",
      "mountPath": "/var/lib/gitea/repositories"
    },
    {
      "name": "gitea-logs",
      "mountPath": "/var/lib/gitea/log"
    }
  ]
}
